{
  "name": "@api/hono",
  "version": "0.0.1",
  "private": true,
  "files": [
    "dist"
  ],
  "type": "module",
  "types": "./dist/index.d.mts",
  "exports": "./dist/index.mjs",
  "scripts": {
    "build": "tsdown",
    "check-types": "SKIP_ENV_VALIDATION=true turbo build --filter=@packages/auth && tsc --noEmit",
    "dev": "concurrently \"tsdown --watch\" \"bun --hot src/index.ts\"",
    "format": "oxfmt",
    "lint": "oxlint",
    "start": "bun dist/index.mjs"
  },
  "dependencies": {
    "@hono/zod-validator": "catalog:",
    "@packages/auth": "workspace:*",
    "@packages/env": "workspace:*",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "@packages/tsconfig": "workspace:*",
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "concurrently": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*": [
      "oxfmt",
      "oxlint"
    ]
  },
  "prettier": {
    "importOrder": [
      "<BUILTIN_MODULES>",
      "",
      "^hono/(.*)$|^hono$",
      "^@hono/(.*)$|^@hono$",
      "",
      "<THIRD_PARTY_MODULES>",
      "",
      "^@/types/(.*)$",
      "^@/db/(.*)$",
      "^@/lib/(.*)$",
      "^@/middlewares/(.*)$",
      "^@/routers/(.*)$",
      "",
      "^[./]"
    ],
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "printWidth": 100,
    "semi": false
  }
}
