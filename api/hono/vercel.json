{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "hono",
  "buildCommand": "cd ../.. && turbo build --filter=@api/hono",
  "installCommand": "cd ../.. && bun install --ignore-scripts",
  "outputDirectory": "dist",
  "builds": {
    "packages/auth": {
      "command": "cd ../.. && turbo build --filter=@packages/auth",
      "outputDirectory": "packages/auth/dist"
    },
    "packages/db": {
      "command": "cd ../.. && turbo build --filter=@packages/db",
      "outputDirectory": "packages/db/dist"
    },
    "packages/env": {
      "command": "cd ../.. && turbo build --filter=@packages/env",
      "outputDirectory": "packages/env/dist"
    }
  },
  "bunVersion": "1.3.4"
}
