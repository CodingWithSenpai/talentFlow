{
  "name": "zerostarter",
  "version": "0.0.13",
  "private": true,
  "homepage": "https://github.com/nrjdalal/zerostarter#readme",
  "bugs": "https://github.com/nrjdalal/zerostarter/issues",
  "license": "MIT",
  "author": {
    "name": "Neeraj Dalal",
