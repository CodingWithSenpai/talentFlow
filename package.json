{
  "name": "zerostarter",
  "version": "0.0.11",
  "private": true,
  "homepage": "https://github.com/nrjdalal/zerostarter#readme",
  "bugs": "https://github.com/nrjdalal/zerostarter/issues",
  "license": "MIT",
  "author": {
    "name": "Neeraj Dalal",
    "email": "admin@nrjdalal.com",
    "url": "https://nrjdalal.com"
  },
  "repository": "nrjdalal/zerostarter",
  "funding": "https://github.com/sponsors/nrjdalal",
  "workspaces": [
    "api/*",
    "packages/*",
    "web/*"
  ],
  "scripts": {
    "build": "turbo build --summarize",
    "check-types": "SKIP_ENV_VALIDATION=true turbo check-types --summarize",
    "clean": "bunx rimraf --glob \"**/.next\" \"**/.turbo\" \"**/dist\" \"**/node_modules\" && bunx delete-empty",
    "db:generate": "turbo build --filter=\"@packages/*\" && bun --cwd packages/db drizzle-kit generate",
    "db:migrate": "turbo build --filter=\"@packages/*\" && bun --cwd packages/db drizzle-kit migrate",
    "db:studio": "turbo build --filter=\"@packages/*\" && bun --cwd packages/db drizzle-kit studio",
    "predev": "turbo build --filter=\"@packages/*\"",
    "dev": "turbo dev --ui tui",
    "devtools": "turbo devtools",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "postinstall": "bun .github/scripts/deps-manager.ts",
    "lint": "turbo lint --summarize",
    "prepare": "bunx lefthook install",
    "start": "turbo start"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@octokit/rest": "catalog:",
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "globby": "catalog:",
    "lefthook": "catalog:",
    "lint-staged": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "turbo": "catalog:"
  },
  "lint-staged": {
    "*": [
      "oxfmt",
      "oxlint"
    ],
    "package.json": [
      "bun .github/scripts/deps-manager.ts"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "packageManager": "bun@1.3.6",
  "catalog": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@fontsource-variable/dm-sans": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@hono/zod-validator": "^0.7.6",
    "@hookform/resolvers": "^5.2.2",
    "@octokit/rest": "^22.0.1",
    "@posthog/react": "^1.5.2",
    "@remixicon/react": "^4.8.0",
    "@t3-oss/env-core": "^0.13.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@takumi-rs/image-response": "^0.62.8",
    "@tanstack/react-form": "^1.27.7",
    "@tanstack/react-query": "^5.90.17",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@types/bun": "latest",
    "@types/mdx": "^2.0.13",
    "@types/node": "latest",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "better-auth": "^1.4.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "concurrently": "^9.2.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "embla-carousel-react": "^8.6.0",
    "fumadocs-core": "^16.4.7",
    "fumadocs-mdx": "^14.2.5",
    "fumadocs-ui": "^16.4.7",
    "globby": "^16.1.0",
    "hono": "^4.11.4",
    "input-otp": "^1.4.2",
    "lefthook": "^2.0.15",
    "lint-staged": "^16.2.7",
    "lucide-react": "^0.562.0",
    "next": "^16.1.2",
    "next-themes": "^0.4.6",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "postgres": "^3.4.8",
    "posthog-js": "^1.321.2",
    "radix-ui": "^1.4.3",
    "react": "^19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.71.1",
    "react-resizable-panels": "^3.0.6",
    "recharts": "2.15.4",
    "shiki": "^3.21.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tsdown": "^0.20.0-beta.3",
    "turbo": "^2.7.4",
